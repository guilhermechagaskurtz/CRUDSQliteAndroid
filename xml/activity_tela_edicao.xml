<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelaEdicao">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edição de veículos"
        style="@style/estiloTitulo"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Id:"
        android:textSize="@dimen/tamanhoTextoSubtitulo"/>

    <EditText
        android:id="@+id/editIdCarro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:textSize="@dimen/tamanhoTextoSubtitulo"/>

    <EditText
        android:id="@+id/editNomeCarro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Placa:"
        android:textSize="@dimen/tamanhoTextoSubtitulo" />

    <EditText
        android:id="@+id/editPlacaCarro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ano:"
        android:textSize="@dimen/tamanhoTextoSubtitulo" />

    <EditText
        android:id="@+id/editAnoCarro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alterar"
        android:onClick="alterarClick"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Excluir"
        android:onClick="excluirClick"/>

</LinearLayout>